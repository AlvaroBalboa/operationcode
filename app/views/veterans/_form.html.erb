<%= form_for(@veteran, html: {class: "form-horizontal", "role" => 'form'} ) do |f| %>
  <% if @veteran.errors.any? %>
    <% @veteran.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
  	    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
          <%= message %>
	  </div>
    <% end %>
  <% end %>
  
  <div class="form-group">
  	<div class="col-md-12">
      <%= f.text_field :email, placeholder: "email address" %>
    </div>
  </div>
  
  <div class="form-group">
	<div class="col-md-6">
	  <%= f.text_field :first_name, placeholder: "first name" %>
    </div>
    
	<div class="col-md-6">
	  <%= f.text_field :last_name, placeholder: "last name" %>
	</div>
  </div>
  
  <div class="form-group">
  	<div class="col-md-12">
      <%= f.select :service_branch, service_branches, {include_blank: true, prompt: 'branch of service'} %>
    </div>
  </div>
  
  <div class="form-group">
  	<div class="col-md-12">
      <%= f.text_field :zip, placeholder: "zip code" %>
    </div>
  </div>

  <div class="form-group">
  	<div class="col-sm-10">
      <%= f.submit "Go", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
